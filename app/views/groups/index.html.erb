<div class="container">
  <h1>My Lights</h1>
  <div class="groups">
    <% @groups.each do |group| %>
      <div class="group">
        <div class="group-name">
          <h2><%= group.name ? group.name : "Unnamed" %></h2>
        </div>

        <div class="group-members">
          <h4>Lights </h4>
          <% if group.lights.present? %>
            <ul>
              <% group.lights.each do |light| %>
                <li>
                  <%= light.name ? light.name : "Unnamed"%>
                </li>
              <% end %>
            </ul>
          <% else %>
            <div>No lights.</div>
          <% end %>
        </div>

        <div class="group-color" id="<%= group.id %>">
          <button class="color-option on">ON</button>
          <button class="color-option off">OFF</button>
          <input class="color-option color jscolor" type="button">
        </div>
      </div>
    <% end %>
    <div class="group new-group">
      <div class="group-name">
        <h2>Add Group</h2>
      </div>
      <%= form_with model: Group.new, local: true do |f| %>
        <div>
          <%= f.label :name %>
          <%= f.text_field :name %>
        </div>
        <div>
          <%= f.label :description %>
          <%= f.text_field :description %>
        </div>
        <div>
          <%#= f.fields_for :lights do |ff| %>
            <%  %>
          <%# end %>
        </div>
        <%= f.submit %>
      <% end %>
    </div>
  </div>

  <div class="lights">
    <% @lights.each do |light| %>
      <div class="light">
        <div>
          <span>Light Name: </span>
          <span><%= light.name ? light.name : "Unnamed" %></span>
        </div>
        <div>
          <span>Group: </span>
          <span><%= light.light_groups ? light.light_groups : "Ungrouped" %></span>
        </div>
        <div>
          <%= link_to 'Change Color', light_path(light) %>
        </div>
      </div>
    <% end %>
  </div>
</div>